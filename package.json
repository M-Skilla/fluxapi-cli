{
  "name": "fluxapi-cli",
  "version": "1.0.0",
  "description": "A lightweight, cross-platform command-line interface for interacting with APIs. Built as a companion to the FluxAPI Desktop client, it allows developers and testers to send HTTP requests, inspect responses, and manage API workflows directly from the terminal.",
  "main": "index.js",
  "bin": {
    "fluxapi": "./bin/fluxapi"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "cli",
    "fluxapi",
    "api",
    "httpie",
    "curl",
    "rest",
    "restful"
  ],
  "author": "M-Skilla",
  "license": "MIT",
  "packageManager": "pnpm@10.14.0",
  "dependencies": {
    "@inquirer/prompts": "^7.8.6",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.1",
    "conf": "^14.0.0",
    "dotenv": "^17.2.2",
    "json-colorizer": "^3.0.1",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
